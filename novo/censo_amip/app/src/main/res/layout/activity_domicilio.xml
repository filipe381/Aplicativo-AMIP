<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#1B523B"
    tools:context=".DomicilioActivity">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="22dp"
            android:contentDescription="Logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logoamiosbg" />

        <TextView
            android:id="@+id/textInicial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Identificação do\ndomicílio"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.197"
            app:layout_constraintStart_toEndOf="@+id/iv_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinnerRua"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/verde"
            android:padding="6dp"
            android:popupBackground="@color/verde"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo"
            app:layout_constraintWidth_percent="0.8" />

        <EditText
            android:id="@+id/et_endereco"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_background"
            android:hint="Endereço:"
            android:inputType="text"
            android:padding="6dp"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerRua"
            app:layout_constraintWidth_percent="0.8" />

        <EditText
            android:id="@+id/et_enderecoPostal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_background"
            android:hint="Endereço Postal:"
            android:inputType="text"
            android:padding="6dp"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_endereco"
            app:layout_constraintWidth_percent="0.8" />

        <EditText
            android:id="@+id/et_areaTerreno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_background"
            android:hint="Área do terreno:"
            android:inputType="numberDecimal"
            android:padding="6dp"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_enderecoPostal"
            app:layout_constraintWidth_percent="0.8" />

        <Spinner
            android:id="@+id/spinnerMoradia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/verde"
            android:padding="6dp"
            android:popupBackground="@color/verde"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_areaTerreno"
            app:layout_constraintWidth_percent="0.8" />

        <Spinner
            android:id="@+id/spinnerTipoMoradia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/verde"
            android:padding="6dp"
            android:popupBackground="@color/verde"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerMoradia"
            app:layout_constraintWidth_percent="0.8" />

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="140dp"
            android:layout_height="57dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/verde"
            android:text="Voltar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnProxima"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerTipoMoradia"
            app:layout_constraintVertical_bias="0.836"
            app:layout_constraintWidth_percent="0.2" />

        <Button
            android:id="@+id/btnProxima"
            android:layout_width="140dp"
            android:layout_height="57dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/verde"
            android:text="Próxima"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnVoltar"
            app:layout_constraintTop_toBottomOf="@+id/spinnerTipoMoradia"
            app:layout_constraintVertical_bias="0.836"
            app:layout_constraintWidth_percent="0.2" />

</androidx.constraintlayout.widget.ConstraintLayout>