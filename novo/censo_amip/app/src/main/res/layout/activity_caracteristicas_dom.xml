<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#1B523B"
    tools:context=".CaracteristicasDomActivity">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="22dp"
        android:contentDescription="Logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoamiosbg" />

    <TextView
        android:id="@+id/tv_CaracteristicasDom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Caracteristicas do\ndomicílio"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintStart_toEndOf="@+id/iv_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinneabastecimentoAgua"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/verde"
        android:padding="6dp"
        android:popupBackground="@color/verde"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo"
        app:layout_constraintWidth_percent="0.8" />

    <Spinner
        android:id="@+id/spinneresgoto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="264dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/verde"
        android:padding="6dp"
        android:popupBackground="@color/verde"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo"
        app:layout_constraintWidth_percent="0.8" />

    <Spinner
        android:id="@+id/spinnerlixo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/verde"
        android:padding="6dp"
        android:popupBackground="@color/verde"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo"
        app:layout_constraintWidth_percent="0.8" />

    <RadioGroup
        android:id="@+id/opcao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="188dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo">

        <RadioButton
            android:id="@+id/sim"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Sim"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/nao"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Não"
            android:textColor="@color/black" />

    </RadioGroup>

    <Button
        android:id="@+id/btnVoltarcaracteristicasDom"
        android:layout_width="140dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/verde"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnProximacaracteristicasDom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinneabastecimentoAgua"
        app:layout_constraintVertical_bias="0.836"
        app:layout_constraintWidth_percent="0.2" />

    <Button
        android:id="@+id/btnProximacaracteristicasDom"
        android:layout_width="140dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/verde"
        android:text="Próxima"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnVoltarcaracteristicasDom"
        app:layout_constraintTop_toBottomOf="@+id/spinneabastecimentoAgua"
        app:layout_constraintVertical_bias="0.836"
        app:layout_constraintWidth_percent="0.2" />

</androidx.constraintlayout.widget.ConstraintLayout>